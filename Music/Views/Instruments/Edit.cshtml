@{
  Layout = "_Layout";
}

@model Music.Models.Instrument

<div class="jumbotron">
  <h2>Edit</h2>
</div>

<h4>Edit this instrument: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.InstrumentId)

  @Html.LabelFor(model => model.Name)
  @Html.EditorFor(model => model.Name, new { required = "required" })

  <input type="submit" value="Save" />
}
<p>@Html.ActionLink("Back to list", "Index")</p>